# ========================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ========================================
# ⚠️  This configuration is for LOCAL DEVELOPMENT only
#     Do not use these settings in production

# MongoDB Configuration (Development)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=data-reader

# Data Reader Application (Development)
NODE_ENV=development
MONGO_URI=mongodb://data-reader-user:data-reader-password@localhost:27017/data-reader
PORT=3000

# Mongo Express (Development UI)
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=password123

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGGING=true 